    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Login</title>
        <link rel ="stylesheet" href="{{ asset('css/Login.css') }}">
        <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
        <script src="{{ asset('js/Login.js') }}"></script>

    </head>
    <body>
    <div id="menu">
        <a id="logo" onmouseenter="mouseEnter('menu')" onmouseleave="mouseLeave('menu')" onclick="redirect()">
            <i class='bx bxs-planet' ></i>
        </a>
        <div id="title" onmouseenter="mouseEnter('menu')" onmouseleave="mouseLeave('menu')" onclick="redirect()">
            <p id="title" >MyMap.com </p>
        </div>
    </div>

    <div class="login">

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}


            <h1  class="h3 mb-3 font-weight-normal" >Login</h1>

            <div class = "input-box">
                <input type="email" placeholder="Email" value="{{ last_username }}" name="email" onfocus="this.placeholder=''" onblur="this.placeholder='Email'">
                <i class='bx bx-user' ></i>
            </div>
            <div class="input-box">
                <input type="password" placeholder="Password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required onfocus="this.placeholder=''" onblur="this.placeholder='Password'">
                <i class='bx bx-lock-alt'></i>
            </div>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            <div class="rememberMe">
                <label>
                    <input type="checkbox"> Remember me
                </label>
            </div>
            <button type="submit" onmouseenter="mouseEnter('btn')" onmouseleave="mouseLeave('btn')" id="btn" class="btn" name="valider" style="font-weight: bold; font-size: medium;"  >Sign in</button>
            <br>
            <br>
            <div>
                <p>Don't have an account ? <a id="signUp" href="{{ path('sign_up') }}" onmouseenter="mouseEnter('signUp')" onmouseleave="mouseLeave('signUp')">Sign up</a>
                </p>
            </div>

        </form>
    </div>
    </body>
    </html>


